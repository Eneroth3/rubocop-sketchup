{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rake",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec", "rake"
      ]
    },
    {
      "label": "All Tests",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec", "rake", "spec"
      ],
      "group": "test"
    },
    {
      "label": "Active Testcase",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec", "rake", "spec", "SPEC=${relativeFile}"
      ],
      "group": "test"
    },
    {
      "label": "Active Test",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec", "rake", "spec", "SPEC=${relativeFile}:${lineNumber}"
      ],
      "group": "test"
    }
  ]
}
